<?xml version="1.0"?>

<robot name="RB1">

    <!-- Define materials for visualization -->
    <material name="purp">
        <color rgba="0.612 0.255 0.592 1"/>
    </material>

    <material name="gray">
        <color rgba="0.40 0.40 0.40 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <link name="base_footprint"/> 

    <joint name="base_link_plate_joint" type="fixed">
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 -0.15" />
        <child link="base_footprint" />
        <parent link="base_link" />   
    </joint>

    <link name="base_link">

        <inertial>
            <mass value="24.72479" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.57176" ixy="0" ixz="0" iyy="0.57176" iyz="0" izz="0.77265" />
        </inertial>

        <visual>
        <material name="purp"/>
        <geometry>
            <cylinder length="0.3" radius="0.25"/>
        </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
        </collision>
    </link>

    <link name="left_wheel">

        <inertial>
            <mass value="0.0025" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.0000000185" ixy="0" ixz="0" iyy="0.0000000185" iyz="0" izz="0.00000000773" />
        </inertial>

        <visual>
        <material name="gray"/>
        <geometry>
            <cylinder length="0.03" radius="0.025"/>
        </geometry>
        </visual>

        <collision>
        <geometry>
                <cylinder length="0.03" radius="0.025"/>
        </geometry>
        </collision>
    </link>

    <joint name="base_link_left_wheel_joint" type="continuous">
        <origin rpy="1.5708 0.0 0.0" xyz="0.0 0.2 -0.15" />
        <child link="left_wheel"/>
        <parent link="base_link"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel">

        <inertial>
            <mass value="0.0025" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.0000000185" ixy="0" ixz="0" iyy="0.0000000185" iyz="0" izz="0.00000000773" />
        </inertial>

        <visual>
        <material name="gray"/>
        <geometry>
            <cylinder length="0.03" radius="0.025"/>
        </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_right_wheel_joint" type="continuous">
        <origin rpy="1.5708 0.0 0.0" xyz="0.0 -0.2 -0.15" />
        <child link="right_wheel"/>
        <parent link="base_link"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="back_caster">

        <inertial>
            <mass value="0.02747" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000006868" ixy="0" ixz="0" iyy="0.000006868" iyz="0" izz="0.000006868" />
        </inertial>

        <visual>
        <material name="gray"/>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
        </visual>

        <collision>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
        </collision>

    </link>

    <joint name="base_link_back_caster_joint" type="fixed">
        <origin rpy="0.0 0.0 0.0" xyz="-0.1 0.0 -0.15" />
        <child link="back_caster"/>
        <parent link="base_link"/>
    </joint>

    <link name="front_caster">

        <inertial>
            <mass value="0.02747" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000006868" ixy="0" ixz="0" iyy="0.000006868" iyz="0" izz="0.000006868" />
        </inertial>

        <visual>
        <material name="gray"/>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
        </visual>

        <collision>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
        </collision>

    </link>

    <joint name="base_link_front_caster_joint" type="fixed">
        <origin rpy="0.0 0.0 0.0" xyz="0.1 0.0 -0.15" />
        <child link="front_caster"/>
        <parent link="base_link"/>
    </joint> 

    <link name="front_laser">

        <inertial>
            <mass value="0.21977" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.0002198" ixy="0" ixz="0" iyy="0.0002197" iyz="0" izz="0.0002197" />
        </inertial>

        <visual>
        <material name="gray"/>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
        </visual>

        <collision>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
        </collision>

    </link>

    <joint name="base_link_front_laser_joint" type="fixed">
        <origin rpy="3.14159 0.0 0.0" xyz="0.25 0.0 0.075" />
        <parent link="base_link"/>
        <child link="front_laser"/>
    </joint>

<!-- ##################### Gazebo Tags ################################################-->

    <gazebo reference="base_link">
        <visual>
            <material>
                <ambient>0.0 0.0 0.0 1.0</ambient>
                <diffuse>0.0 0.0 0.0 1.0</diffuse>
                <specular>0.0 0.0 0.0 1.0</specular>
                <emissive>0.0 0.0 0.0 1.0</emissive>
            </material>
        </visual>
    </gazebo>    

    <gazebo reference="right_wheel">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.5</mu>
                        <mu2>0.5</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

    <gazebo reference="left_wheel">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.5</mu>
                        <mu2>0.5</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

    <gazebo reference="front_caster">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.0</mu>
                        <mu2>0.0</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

        <gazebo reference="back_caster">
        <collision>
            <surface>
                <friction>
                    <ode>
                        <mu>0.0</mu>
                        <mu2>0.0</mu2>
                    </ode>
                </friction>
            </surface>
        </collision>
    </gazebo>

</robot>